@page
@model SE1728_Razor.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Order List</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<p>
    <a asp-page="Index" asp-route-ok="1" class="btn btn-info">Sort Order</a>
</p>

<table class="table table-bordered table-striped" style="margin-top: 20px;">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Order ID</th>
            <th scope="col">Order Date</th>
            <th scope="col">Staff ID</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>@Html.DisplayFor(modelItem => item.StaffId)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.OrderId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.OrderId" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.OrderId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
